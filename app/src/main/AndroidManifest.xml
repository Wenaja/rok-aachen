<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rok_aachen">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".RokAachenApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RokAachenApp">
        <activity
            android:name=".activities.DayDetailActivity"
            android:exported="true"
            android:parentActivityName=".activities.WorshipTimetableActivity"/>
        <activity
            android:name=".activities.WorshipTimetableActivity"
            android:exported="true"
            android:label="@string/str_title_activity_worship_timetable" />
        <activity android:name=".activities.MainActivity" android:label="@string/str_title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>